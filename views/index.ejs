<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <script src="/js/alpine.min.js" defer></script>
    <script src="/js/tailwind.min.js"></script>
  </head>
  <body>
    <header>
        <ul class="flex items-center justify-between bg-blue-500 p-4">
            <li class="text-white text-lg font-bold" onclick="window.location.href='/'">Classroom Clone</li>
            <li class="flex justify-end space-x-4">
                <a href="/settings" class="text-white hover:text-gray-200">Settings</a>
                <a href="/dashboard" class="text-white hover:text-gray-200">Dashboard</a>
                <a href onclick='document.cookie = "token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";' class="text-white hover:text-gray-200">Sign Out</a>
            </li>
        </ul>
    </header>
    <main>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 mx-4" x-data="{ items: []}" x-init="items = (await fetch('/data')).json()">
        <template x-for="item in items" :key="item">
          <div class="bg-white rounded-lg shadow-md p-6 flex flex-col space-y-4">
            <div class="flex items-center justify-center">
                <img :src="item.logo" alt="Classroom Banner" class="w-16 h-16 rounded-full">
            </div>
            <div class="flex flex-col">
              <h2 class="text-xl font-semibold mb-2"><a :href="item.link" x-text="item.name"></a></h2>
              <p class="text-gray-500 mb-2" x-text="item.code"></p>
              <p class="text-gray-700 mb-2" x-text="item.description"></p>
              <div class="flex items-center mt-2">
                <img :src="item.teacher_avatar" alt="Teacher Profile Picture" class="w-10 h-10 rounded-full mr-2">
                <p class="text-gray-700" x-text="item.teacher"></p>
              </div>
            </div>
          </div>
        </template>
      </div>
    </main>
  </body>
</html>