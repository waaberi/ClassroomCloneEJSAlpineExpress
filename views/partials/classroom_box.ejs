<div class="bg-white rounded-lg shadow-md p-6 flex flex-col space-y-4">
    <div class="flex items-center justify-center">
        <img src="<%= course.logo %>" alt="Classroom Banner" class="w-16 h-16 rounded-full">
    </div>
    <div class="flex flex-col">
        <h2 class="text-xl font-semibold mb-2"><a href="<%= course.link %>"><%= course.name %></a></h2>
        <p class="text-gray-500 mb-2"><%= course.code %></p>
        <p class="text-gray-700 mb-2"><%= course.description %></p>
        <div class="flex items-center mt-2">
            <img src="<%= course.teacher_avatar %>" alt="Teacher Profile Picture" class="w-10 h-10 rounded-full mr-2">
            <p class="text-gray-700"><%= course.teacher %></p>
        </div>
    </div>
</div>